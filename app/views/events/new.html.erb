<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
    <br><br><br>
      <%= form_with scope: :event, url: events_path, local: true do |form| %>
      <h1 class="h3 mb-3 font-weight-normal text-center">Crée ton évent! Yeah!</h1>
  <div class="form-group">
    <%= form.label :title, "Title" %><br>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :description %><br>
    <%= form.text_area :description, class: "form-control"  %>
    <p style="font-size: x-small;  text-align: right;">20-150</p>
  </div>
   <div class="form-group">
    <%= form.label :price %><br>
    <%= form.text_field :price, class: "form-control"  %>
  </div>
   <div class="form-group">
    <%= form.label :duration %><br>
    <%= form.text_field :duration, class: "form-control"  %>
  </div>
   <div class="form-group">
    <%= form.label :location %><br>
    <%= form.text_field :location, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= form.label :start_date %><br>
    <%= form.text_field :start_date, class: "form-control" %>
    <p style="font-size: x-small; text-align: right;">year-month-day</p>
  </div>
  <div class="actions mt-5">
    <%= form.submit"Créer", class: "btn btn-lg btn-primary btn-block"%>
  </div>
    <% end %>
    <%= link_to 'Revenir au Evenements', static_pages_index_path %>
    </div>
  </div>
</div>

